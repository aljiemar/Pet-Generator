<body>
  <header>ðŸŒ± Grow-A-Garden Pet Generator</header>

  <button onclick="generatePet()">ðŸŽ² Generate Pet</button>
  <button onclick="generateMultiplePets()">ðŸŽ¯ Generate 3 Pets</button>

  <div id="petResultContainer"></div>

  <script>
    const pets = [
      { name: "Raccoon", rarity: "Common", img: "https://static.wikia.nocookie.net/grow-a-garden/images/4/4a/Raccoon.png", link: "https://www.roblox.com/users/4500507838/profile" },
      { name: "Kitsune", rarity: "Legendary", img: "https://static.wikia.nocookie.net/grow-a-garden/images/3/3a/Kitsune.png", link: "https://www.roblox.com/games/126884695634066/Grow-a-Garden" },
      { name: "Bunny", rarity: "Rare", img: "https://static.wikia.nocookie.net/grow-a-garden/images/a/a0/Bunny.png", link: "https://www.roblox.com/users/4500507838/profile" }
    ];

    function randomStat() {
      return Math.floor(Math.random() * 100) + 1; // 1 to 100
    }

    function createPetBox(pet) {
      const box = document.createElement("div");
      box.className = "pet-box";
      box.innerHTML = `
        <a href="${pet.link}" target="_blank">
          <img src="${pet.img}" alt="${pet.name}">
        </a>
        <div class="name">${pet.name}</div>
        <div class="rarity ${pet.rarity}">${pet.rarity}</div>
        <div class="stats">
          Health: ${randomStat()}<br>
          Happiness: ${randomStat()}<br>
          Energy: ${randomStat()}
        </div>
      `;
      return box;
    }

    function generatePet() {
      const randomPet = pets[Math.floor(Math.random() * pets.length)];
      const container = document.getElementById("petResultContainer");
      container.innerHTML = "";
      container.appendChild(createPetBox(randomPet));
    }

    function generateMultiplePets() {
      const container = document.getElementById("petResultContainer");
      container.innerHTML = "";
      for (let i = 0; i < 3; i++) {
        const randomPet = pets[Math.floor(Math.random() * pets.length)];
        container.appendChild(createPetBox(randomPet));
      }
    }
  </script>
