<body>
  <div class="app">
    <h1>ðŸŒ± Grow-A-Garden Pet Generator</h1>
    <div class="controls">
      <button onclick="generatePets()">âœ¨ Generate Pets</button>
    </div>
    <div class="grid" id="petGrid"></div>
  </div>

  <script>
    // Pet list with fixed links
    const pets = [
      { 
        name: "Raccoon", 
        rarity: "Devine", 
        img: "https://static.wikia.nocookie.net/growagarden/images/5/54/Raccon_Better_Quality.png", 
        link: "https://www.robiox.com.ua/users/4500507838/profile" 
      },
      { 
        name: "Corrupted Kitsune", 
        rarity: "Prismatic", 
        img: "https://static.wikia.nocookie.net/growagarden/images/2/2a/CorruptedKitsune.png", 
        link: "https://www.robiox.com.ua/games/126884695634066/Grow-a-Garden?privateServerLinkCode=74950412899507275796099852771822" 
      },
      { 
        name: "Kitsune", 
        rarity: "Prismatic", 
        img: "https://static.wikia.nocookie.net/growagarden/images/0/04/Kitsune.png", 
        link: "https://www.robiox.com.ua/users/4500507838/profile" 
      }
    ];

    function randInt(max) {
      return Math.floor(Math.random() * max);
    }

    function generatePets() {
      const grid = document.getElementById("petGrid");
      grid.innerHTML = "";
      for (let i = 0; i < 3; i++) {
        const pet = pets[randInt(pets.length)];
        const card = document.createElement("div");
        card.className = "pet";
        card.innerHTML = `
          <a href="${pet.link}" target="_blank">
            <img src="${pet.img}" alt="${pet.name}">
          </a>
          <div class="name">${pet.name}</div>
          <div class="rarity ${pet.rarity}">${pet.rarity}</div>
        `;
        grid.appendChild(card);
      }
    }
  </script>
